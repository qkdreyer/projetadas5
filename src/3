23. affiche("(\" abc \").Trim()=[" + " abc 24. }//Main 25. 26. public static void affiche(string msg) { 27. // affiche msg 28. Console.WriteLine(msg); 29. }//affiche 30. }//classe 31. }//namespace

".Trim() + "]");

